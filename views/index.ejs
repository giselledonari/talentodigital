<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <!-- CSS only -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
    <link rel="stylesheet" href="../style/style.css">
</head>
<body class="producto">
    <%- include('nav') %>

    <div class="container mb-5">
        <div class="col-12 mt-3 text-center">
          <h2>Ultimas Noticias</h2>
        </div>
  
        <div class="row row-cols-1 row-cols-md-3 g-4 mt-3">
           <% const data2= data.length > 5 ? data.slice(0, 5) : data; %> 
          <% for (let value of data2){ %> 
          <div class="col">
            <div class="card h-100 cardProductos" id=<%=value.id  %>   >
              <img src="./uploads/<%=value.imagen%>"   class="card-img-top img-cortar" height="300"  alt=<%=value.titulo%> >
              <div class="card-body">
                <h5 class="card-title"> <%=value.titulo  %> </h5>
                <p> <a class="btn btn-success btn-noticia" href="/noticia/<%=value.id  %>">Leer Noticia</a>
                </p>
              </div>
            </div>
          </div>
          <% } %> 
          
        </div>
  
      </div>
    
    <%- include('footer') %>


    <!-- JavaScript Bundle with Popper -->
<script src="./javascript/index.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>
</body>
</html>